{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"filesGlob": [
		"./app/**/*.ts",
		"!./node_modules/**/*.ts",
		"./node_modules/@angular/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}